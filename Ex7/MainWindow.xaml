<Window x:Class="Ex7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="input" HorizontalAlignment="Left" Margin="307,43,0,0" TextWrapping="Wrap" Text="Enter temp. in C" VerticalAlignment="Top" Width="120" GotFocus="input_GotFocus"/>
        <Button x:Name="btn" Content="Convert" HorizontalAlignment="Left" Margin="347,88,0,0" VerticalAlignment="Top" Click="btn_Click"/>
        <TextBlock x:Name="output" HorizontalAlignment="Left" Margin="307,130,0,0" TextWrapping="Wrap" Text="Temperature in Fahrenheit: " VerticalAlignment="Top"/>

    </Grid>
</Window>
